<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.drax">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="369dp"
        android:layout_height="198dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/drax" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="364dp"
        android:layout_height="87dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="44dp"
        android:text="Dave Bautista como Drax el Destructor"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="367dp"
        android:layout_height="161dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="36dp"
        android:text="Las motivaciones iniciales de Drax se relacionaban a vengar la muerte de su familia. Como esa misión se completó, encontró en “Los Guardianes” a su gran equipo. El actor que lo interpreta es Dave Bautista, quien también se despide del MCU con este film.  "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/back_drax_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/back_drax_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:text="Regresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>